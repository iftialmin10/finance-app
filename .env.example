# Local Postgres connection (Docker Compose defaults)
DATABASE_URL="postgresql://finance_user:finance_pass@localhost:5432/finance_app?schema=public"

# Session/token encryption secret (32+ chars, replace in .env.local)
SESSION_SECRET="replace-with-a-secure-random-string"

# When true, the UI auto-enables Guest Mode for demos (no backend calls)
NEXT_PUBLIC_FORCE_GUEST_MODE="false"

# Public app URL (used in auth emails)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email provider: mock | mailhog | brevo
EMAIL_PROVIDER="mailhog"
MAILHOG_HOST="localhost"
MAILHOG_PORT="1025"

# Brevo / Sendinblue credentials for sending auth emails (optional in dev)
BREVO_API_KEY=""
BREVO_SENDER_EMAIL="no-reply@finance-app.dev"
BREVO_SENDER_NAME="Finance App"
